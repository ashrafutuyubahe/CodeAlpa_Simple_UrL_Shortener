<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  </head>
  <body>
    <div class="container mt-5">
      <form action="/postUrl" method="post" id="post-form" class="post-form">
        <div class="form-group">
          <label for="url">Your URL</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter the URL..."
            id="url"
            name="theURL"
            required
          />
          <input
            type="text"
            placeholder="YOUR ID"
            id="user_id"
            name="user_id"
            class="form-control"
          />
        </div>
        <button type="submit" class="btn btn-primary">
          View the short URL
        </button>
        <button type="submit" class="btn btn-primary" id="viewUrl">
          View Your Urls
        </button>

        <div id="shortUrlContainer" class="mt-3"></div>
        <div id="url-list"></div>
      </form>
    </div>

    <script>
      $(document).ready(function () {
        $(".post-form").submit(function (event) {
          event.preventDefault();
          const theURL = $("#url").val();
          const user_id = $("#user_id").val();
          $.ajax({
            url: "/postUrl",
            type: "post",
            data: $(this).serialize(),
            success: function (response) {
              if (response == "Enter the user id") {
                alert(response);
              }
              const shortUrl = response.shortUrl;
              const shortId = response.shortId;

              const link = $("<a>")
                .attr("href", "#")
                .attr("id", "shortUrlLink")
                .text(shortUrl);

              $("#shortUrlContainer").empty().append(link);

              $("#shortUrlLink").click(function (e) {
                e.preventDefault();

                $.ajax({
                  type: "get",
                  url: "/urlClicked?id=" + shortId,
                  success: function (response) {
                    window.location.href = response;
                  },
                  error: function (error) {
                    console.log(error);
                  },
                });
              });
            },
            error: function (error) {
              console.log(error);
            },
          });
        });
        $("#viewUrl").click(function (e) {
          e.preventDefault();
          const user_id = $("#user_id").val();
          $.ajax({
            type: "get",
            url: "/getUrls",
            data: {
              user_id: user_id,
            },
            success: function (response) {
              const fullurl = response[0].full;
              const short = response[0].short;
              console.log(fullurl);

              $("#url-list").append(
                '<li class="list-group-item">  <a href="' +
                  fullurl +
                  '">' +
                  fullurl +
                  '</a> ==> <a href="' +
                  fullurl +
                  '">' +
                  short +
                  "</a></li>"
              );
            },
            error: function (error) {
              alert(error);
            },
          });
        });
      });
    </script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
